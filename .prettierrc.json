{
	"arrowParens": "always",
	"printWidth": 120,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "all",
	"useTabs": true,
	"overrides": [
		{
			"files": "*.yml",
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		},
		{
			"files": ".travis.yml",
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
