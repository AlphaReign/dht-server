{
	"author": {
		"email": "prefinem@gmail.com",
		"name": "Prefinem",
		"url": "https://prefinem.com"
	},
	"dependencies": {
		"bencode": "^2.0.1",
		"nativemodels": "^2.5.1"
	},
	"description": "AlphaReign's Torrent DHT Server",
	"devDependencies": {
		"eslint": "^5.6.0",
		"eslint-config-prettier": "^3.0.1",
		"husky": "^1.2.0",
		"lint-staged": "^8.0.0",
		"prettier": "^1.14.3"
	},
	"engines": {
		"node": ">=8.10"
	},
	"homepage": "https://github.com/AlphaReign/dht-server",
	"husky": {
		"hooks": {
			"pre-commit": "yarn staged"
		}
	},
	"license": "MIT",
	"lint-staged": {
		"ignore": [
			"site/**"
		],
		"linters": {
			"*.js": [
				"eslint --fix",
				"prettier --config ./.prettierrc.json --write",
				"git add"
			]
		}
	},
	"main": "src/index.js",
	"name": "dht-server",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AlphaReign/dht-server"
	},
	"scripts": {
		"clean": "yarn lint && yarn prettify",
		"eslint-check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
		"lint": "eslint src/* --fix",
		"prettify": "prettier --config ./.prettierrc.json --write \"src/**\"",
		"staged": "lint-staged"
	},
	"version": "0.0.1"
}
